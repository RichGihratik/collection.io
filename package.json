{
	"scripts": {
		"pre-commit": "pnpm run --filter \"@collection.io/*\" pre-commit",
		"prepare": "husky install"
	},
	"husky": {
    "hooks": {
      "pre-commit": "npx validate-branch-name"
    }
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop|release){1}$|^(feature|fix|hotfix)\/.+$",
    "errorMsg": "Branch name must start with 'feature/', 'fix/' or 'hotfix/'"
  },
	"devDependencies": {
		"git-commit-msg-linter": "^5.0.4",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.0",
		"validate-branch-name": "^1.3.0"
	}
}
