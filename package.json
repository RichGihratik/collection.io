{
  "scripts": {
    "pre-commit": "pnpm run --filter \"@collection.io/*\" pre-commit && lint-staged",
    "prepare": "husky install",
    "lint": "pnpm run --filter \"@collection.io/*\" lint"
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop|release){1}$|^(feature|fix|hotfix|technical-dept)/.+$",
    "errorMsg": "Branch name must start with 'feature/', 'fix/' or 'hotfix/'"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
		"*.tsx": "eslint --fix"
  },
  "devDependencies": {
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "validate-branch-name": "^1.3.0"
  }
}
